<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Update"
        android:background="#1D18E1"
        android:textSize="21dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="left"
        android:text="Information about pet"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtPetName"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center_horizontal"
        android:hint="Pet name" />

    <EditText
        android:id="@+id/txtGender"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Pet Gender" />

    <EditText
        android:id="@+id/txtBreed"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Pet Type" />

    <EditText
        android:id="@+id/txtLost"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Lost date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="17sp"
        android:text="Paste Image Url : "
        android:textColor="#000000"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtImageUrl"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Lost Image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="left"
        android:text="Information about Owner"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtOwnerName"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Owner Name" />

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Phone Number" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Address" />


    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:hint="Description about pet" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_rouned"
        android:gravity="center"
        android:nestedScrollingEnabled="false"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>